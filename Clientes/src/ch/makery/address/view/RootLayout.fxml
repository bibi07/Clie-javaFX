          <Menu mnemonicParsing="false" text="Estadisticas">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleShowFechaStatistics" text="Graficas" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Sincronizar">
            <items>
              <MenuItem mnemonicParsing="false" text="Acerca de..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
